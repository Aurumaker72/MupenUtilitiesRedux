<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MupenUtilitiesRedux.Views.Avalonia.UserControls.KeyedStringField"
             x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ElementName=Root, Path=Label, FallbackValue='No Label'}" VerticalAlignment="Center"
                   HorizontalAlignment="Right" />
        <TextBox Grid.Column="1" Text="{Binding ElementName=Root, Path=Value, FallbackValue='No Value'}"
                 VerticalAlignment="Center" IsReadOnly="{Binding ElementName=Root, Path=IsReadOnly}" />
    </Grid>
</UserControl>